{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "target": "ESNext",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "removeComments": true,
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}
